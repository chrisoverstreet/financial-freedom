generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id        String      @id @default(cuid())
  stytchId  String      @unique @map(name: "stytch_id")
  firstName String?     @map(name: "first_name")
  lastName  String?     @map(name: "last_name")
  email     String?     @unique
  createdAt DateTime    @default(now()) @map(name: "created_at")
  updatedAt DateTime    @updatedAt @map(name: "updated_at")
  PlaidItem PlaidItem[]

  @@map(name: "user")
}

model PlaidItem {
  id            Int              @id @default(autoincrement())
  plaidId       String           @unique @map(name: "plaid_id")
  userId        String           @map(name: "user_id")
  User          User             @relation(fields: [userId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  accessToken   String           @map(name: "access_token")
  institutionId Int
  Institution   PlaidInstitution @relation(fields: [institutionId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  Accounts      PlaidAccount[]
  createdAt     DateTime         @default(now()) @map(name: "created_at")
  updatedAt     DateTime         @updatedAt @map(name: "updated_at")

  @@map(name: "user_plaid_config")
}

model PlaidAccount {
  id               Int       @id @default(autoincrement())
  plaidId          String    @unique @map(name: "plaid_id")
  itemId           Int       @map(name: "item_id")
  Item             PlaidItem @relation(fields: [itemId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  mask             String?
  name             String
  officialName     String?
  type             String
  subtype          String?
  availableBalance Int?
  currentBalance   Int?
  ISOCurrencyCode  String?
  limit            Int?
  createdAt        DateTime  @default(now()) @map(name: "created_at")
  updatedAt        DateTime  @updatedAt @map(name: "updated_at")

  @@map(name: "plaid_account")
}

model PlaidInstitution {
  id           Int         @id @default(autoincrement())
  plaidId      String      @unique @map(name: "plaid_id")
  name         String
  primaryColor String?
  url          String?
  logo         String?
  createdAt    DateTime    @default(now()) @map(name: "created_at")
  updatedAt    DateTime    @updatedAt @map(name: "updated_at")
  PlaidItem    PlaidItem[]

  @@map(name: "plaid_institution")
}
